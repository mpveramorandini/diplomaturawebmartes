<div class="container" style="margin-top: 50px;">
    <div class="row">
        <p class="text-end">Hola {{persona}}! <a class="btn btn-danger" href="/admin/login/logout"> Cerrar Sesi√≥n <i
                    class="fas fa-sign-out-alt"></i> </a></p>
    </div>
    <div class="row">
        <div class="col-7">
            <h3>Listado de Novedades</h3>
        </div>
        <div class="col-5 text-end">
            <a class="btn btn-dark" href="/admin/novedades/agregar"><i class="fa fa-plus"
                    aria-hidden="true"></i>Nuevo</a>

        </div>
    </div>
    <div class="row">
        <div class="col">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Titulo</th>
                        <th scope="col">Imagen</th>
                        <th class="text-end">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each novedades}}
                    <tr>
                        <th scope="row">{{id}}</th>
                        <td>{{titulo}}</td>
                        <td>{{{imagen}}}</td>
                        <td class="text-end"><a class="btn btn-secondary" href="/admin/novedades/modificar/{{id}}"><i
                                    class="fa-solid fa-pencil" aria-hidden="true"></i></a>
                            <a class="btn btn-secondary" href="/admin/novedades/eliminar/{{id}}"><i
                                    class="fa-solid fa-trash" aria-hidden="true"></i></a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>

</div>

